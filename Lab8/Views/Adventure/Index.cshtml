@model IEnumerable<AdventureModel>
@{
    ViewData["Title"] = "Adventure";
}
<body>
    <h1>
        Adventures
    </h1>
    <h2>
        <div>
            <a asp-area="" asp-controller="Adventure" asp-action="PostBlog">Post Blog</a>
        </div>
    </h2>
<ul class="list-group">
    @foreach (var adventure in Model)
    {
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-10">
                    </p><a href="@Url.Action("View", "Adventure", new { @id = adventure.ID })">@adventure.AName</a>
                </div>
                <div class="col-md-2">
                    <form class ="form-inline" asp-action="Delete" asp-controller="Adventure" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@adventure.ID" />
                        <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i></button>
                    </form>
                </div>
            </div>
        </li>

    }
</ul>
</body>