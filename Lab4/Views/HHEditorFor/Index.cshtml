@model Lab4.Models.ComputerModel
@{
    ViewBag.Title = "HHEditorFor";
}
<body>
    <header>
        <h1>HHEditorFor</h1>
    </header>
    <p>Please fill out the form below</p>
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m=>m.Name, new {@class = "control-label"})
            @Html.EditorFor(m=>m.Name, new {htmlAttributes = new {@class="form-control"}})
            @Html.ValidationMessageFor(m=>m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Password, new {@class = "control-label"})
            @Html.EditorFor(m=>m.Password, new {htmlAttributes = new {@class="form-control"}})
            @Html.ValidationMessageFor(m=>m.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.IPAddress, new {@class = "control-label"})
            @Html.EditorFor(m=>m.IPAddress, new {htmlAttributes = new {@class="form-control"}})
            @Html.ValidationMessageFor(m=>m.IPAddress)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Location, new {@class = "control-label"})
            @Html.EditorFor(m=>m.Location, new {htmlAttributes = new {@class="form-control"}})
            @Html.ValidationMessageFor(m=>m.Location)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.OS, new {@class = "control-label"})
            @Html.DropDownListFor(m=>m.OS, new SelectList(Lab4.Models.ComputerModel.OSTypes), new {@class="form-control"})
            @Html.ValidationMessageFor(m=>m.OS)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Description, new {@class = "control-label"})
            @Html.EditorFor(m=>m.Description, new {htmlAttributes = new {@class="form-control"}})
            @Html.ValidationMessageFor(m=>m.Description)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.SupportedMonitors, new {@class = "control-label"})
            @Html.EditorFor(m=>m.SupportedMonitors, new {htmlAttributes = new {@class="form-control", type="number"}})
            @Html.ValidationMessageFor(m=>m.SupportedMonitors)
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</body>