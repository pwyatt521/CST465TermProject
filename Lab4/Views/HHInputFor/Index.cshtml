@model Lab4.Models.ComputerModel
@{
    ViewBag.Title = "HHInput";
}
<body>
    <header>
        <h1>HHInputFor</h1>
    </header>
    <p>Please fill out the form below</p>
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m=>m.Name, new {@class = "control-label"})
            @Html.TextBoxFor(m=>m.Name, new {@class="form-control"})
            @Html.ValidationMessageFor(m=>m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Password, new{@class = "control-label"})
            @Html.PasswordFor(m=>m.Password, new{@class="form-control"})
            @Html.ValidationMessageFor(m=>m.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.IPAddress, new{@class = "control-label"})
            @Html.TextBoxFor(m=>m.IPAddress, new{@class="form-control"})
            @Html.ValidationMessageFor(m=>m.IPAddress)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Location, new{@class = "control-label"})
            @Html.TextBoxFor(m=>m.Location, new{@class="form-control"})
            @Html.ValidationMessageFor(m=>m.Location)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.OS, new{@class = "control-label"})
            @Html.DropDownListFor(m=>m.OS, new SelectList(Lab4.Models.ComputerModel.OSTypes), new{@class="form-control"})
            @Html.ValidationMessageFor(m=>m.OS)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Description, new{@class = "control-label"})
            @Html.TextBoxFor(m=>m.Description, new{@class="form-control"})
            @Html.ValidationMessageFor(m=>m.Description)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.SupportedMonitors, new{@class = "control-label"})
            @Html.TextBoxFor(m=>m.SupportedMonitors, new{@class="form-control", type="number"})
            @Html.ValidationMessageFor(m=>m.SupportedMonitors)
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</body>